generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id          String @id
  name        String @unique
  petType     PetType
  vaccination PetVaccination[]
}

model Vaccine {
  id          String @id
  name        String @unique
  description String?
  petType     PetType
  duration    Int
  vaccination PetVaccination[]
}

model PetVaccination {
  pet       Pet @relation(fields: [petId], references: [id])
  petId     String
  vaccine   Vaccine @relation(fields: [vaccineId], references: [id])
  vaccineId String

  @@id([petId, vaccineId])
}

enum PetType {
  DOG
  CAT
  CAPYBARA
  OTHER
}